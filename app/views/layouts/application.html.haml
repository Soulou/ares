!!!
%html
  %head
    %title ARES
    = javascript_include_tag :application
    = stylesheet_link_tag :application
    = csrf_meta_tag
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          = link_to 'ARES', root_path, class: 'brand'
          .nav-collapse
            %ul.nav
              %li= link_to 'Utilisateurs', users_path
              %li= link_to 'Groupes', groups_path
          - if user_signed_in?
            %ul.nav.pull-right
              %li.dropdown#menu1
                %a.dropdown-toggle{href: '#menu1', 'data-toggle' => 'dropdown'}
                  = current_user.name
                  %b.caret
                %ul.dropdown-menu
                  %li= link_to 'd√©conexion', destroy_user_session_path, method: :delete
    .container
      = yield
